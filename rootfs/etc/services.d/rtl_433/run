#!/usr/bin/with-contenv bashio
declare confdir
declare custdir
declare cfig
declare flexfig

confdir="/rattler/"
custdir="/config/$(bashio::config 'customize.folder')/"
dir="${confdir}"
if [ bashio::config.true 'customize.active' ]; then
  if [ ! -d "${custdir}" ]; mkdir -p "${custdir}"
  if [ ! -f "${custdir}rtl_433.conf" ]; cp "${confdir}rtl_433.conf" "${custdir}"
  if [ ! -f "${custdir}output.conf" ]; cp "${confdir}output.conf" "${custdir}"
  dir="${custdir}"
  if [ bashio::config.true 'customize.flex' ]; then
    if [ ! -d "${custdir}flex" ]; cp "${confdir}flex" "${custdir}" || bashio::exit.nok "Could not create Rattler Flex config folder!"
    for cfig in "${custdir}flex/*.conf"; do
      flexfig="$flexfig -c $cfig "
    done
  fi
fi

rtl_433 -c ${dir}rtl_433.conf $confv -c ${dir}output.conf
